{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}
<article class="blog-post {{post_class}}">
  <div class="wrapper">
    <div class="row">
      <h2 class="headline"><a href="{{url}}">{{title}}</a></h2>
    
      <aside class="meta">
        <svg role="presentation" class="icon"><use xlink:href="/assets/svg/map-general.svg#general-calendar"></use></svg>
        <time class="published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD. MMMM YYYY"}}</time>

        {{#if tags }}
        <svg role="presentation" class="icon"><use xlink:href="/assets/svg/map-general.svg#general-price-tags"></use></svg>
        <ul class="tags">
          {{#foreach tags}}
            <li><a href="{{url}}">{{name}}</a></li>
          {{/foreach}}
        </ul>
        {{/if}}
      </aside>

      <div class="content">
        {{content}}
      </div>
    </div>
  </div>
</article>

<nav class="post-pagination -simple" role="navigation">
  <div class="row">
    <div class="wrapper">
      <div class="newer">
        {{#next_post}}
            <a class="newer-posts" href="{{url}}">&#10094; Newer</a>
        {{/next_post}}
      </div>
      <div class="older">
        {{#prev_post}}
            <a class="older-posts" href="{{url}}">Older &#10095;</a>
        {{/prev_post}}
      </div>
    </div>
  </div>
</nav>

{{/post}}
